    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Client",
            "type": "npm",
            "script": "dev",
            "path": "Client/",
            "isBackground": true,
            "problemMatcher": {
                "owner": "custom",
                "pattern": {
